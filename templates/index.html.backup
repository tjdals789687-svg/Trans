<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NLLB 번역기</title>
    <link rel="stylesheet" href="/static/css/chatbot.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 20px;
        }

        .main-container {
            max-width: 900px;
            margin: 0 auto;
        }

        header {
            text-align: center;
            margin-bottom: 30px;
            color: white;
        }

        header h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
        }

        header p {
            font-size: 1.1rem;
            opacity: 0.9;
        }

        .version-badge {
            display: inline-block;
            background: rgba(255,255,255,0.2);
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.9rem;
            margin-top: 10px;
        }

        .card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            padding: 30px;
            margin-bottom: 20px;
        }

        .language-selector {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
            margin-bottom: 25px;
            flex-wrap: wrap;
        }

        .lang-box {
            flex: 1;
            min-width: 150px;
            max-width: 250px;
        }

        .lang-box label {
            display: block;
            font-size: 0.85rem;
            color: #666;
            margin-bottom: 8px;
            font-weight: 600;
        }

        .lang-box select {
            width: 100%;
            padding: 12px 15px;
            font-size: 1rem;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            background: white;
            cursor: pointer;
            transition: all 0.3s;
        }

        .lang-box select:hover {
            border-color: #667eea;
        }

        .lang-box select:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.2);
        }

        .swap-btn {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            border: none;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 20px;
        }

        .swap-btn:hover {
            transform: rotate(180deg) scale(1.1);
        }

        .text-areas {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        @media (max-width: 768px) {
            .text-areas {
                grid-template-columns: 1fr;
            }
        }

        .text-box {
            display: flex;
            flex-direction: column;
        }

        .text-box label {
            font-size: 0.9rem;
            color: #555;
            margin-bottom: 10px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .text-box textarea {
            width: 100%;
            height: 200px;
            padding: 15px;
            font-size: 1rem;
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            resize: vertical;
            transition: all 0.3s;
            font-family: inherit;
        }

        .text-box textarea:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.2);
        }

        .text-box textarea:read-only {
            background: #f9f9f9;
        }

        .char-count {
            text-align: right;
            font-size: 0.8rem;
            color: #999;
            margin-top: 5px;
        }

        .button-area {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }

        .btn {
            flex: 1;
            padding: 15px 25px;
            font-size: 1.1rem;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s;
            font-weight: 600;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
        }

        .btn-primary:disabled {
            background: #ccc;
            transform: none;
            box-shadow: none;
            cursor: not-allowed;
        }

        .btn-secondary {
            background: #f0f0f0;
            color: #555;
        }

        .btn-secondary:hover {
            background: #e0e0e0;
        }

        .message {
            padding: 12px 20px;
            border-radius: 10px;
            margin: 15px 0;
            display: none;
            animation: slideIn 0.3s ease;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .message.error {
            background: #ffebee;
            color: #c62828;
            border-left: 4px solid #ef5350;
        }

        .message.success {
            background: #e8f5e9;
            color: #2e7d32;
            border-left: 4px solid #66bb6a;
        }

        .message.info {
            background: #e3f2fd;
            color: #1565c0;
            border-left: 4px solid #42a5f5;
        }

        .options {
            margin: 20px 0;
            padding: 15px;
            background: #f5f5f5;
            border-radius: 10px;
        }

        .option-item {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .option-item input[type="checkbox"] {
            width: 18px;
            height: 18px;
            cursor: pointer;
        }

        .option-item label {
            cursor: pointer;
            color: #555;
            font-size: 1rem;
        }

        .audio-player {
            margin-top: 15px;
            padding: 15px;
            background: #f5f5f5;
            border-radius: 10px;
            display: none;
        }

        .audio-player label {
            display: block;
            font-size: 0.9rem;
            color: #555;
            margin-bottom: 10px;
            font-weight: 600;
        }

        .audio-player audio {
            width: 100%;
        }

        .spinner {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 3px solid rgba(255,255,255,0.3);
            border-radius: 50%;
            border-top-color: white;
            animation: spin 1s linear infinite;
            margin-right: 10px;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        .shortcuts {
            margin-top: 15px;
            font-size: 0.8rem;
            color: #999;
            text-align: center;
        }

        .shortcuts kbd {
            background: #eee;
            padding: 2px 6px;
            border-radius: 4px;
            font-family: monospace;
        }

        footer {
            text-align: center;
            color: rgba(255,255,255,0.7);
            margin-top: 30px;
            font-size: 0.9rem;
        }

        footer a {
            color: white;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="main-container">
        <header>
            <h1>NLLB 번역기</h1>
            <p>Meta AI 기반 200개 언어 번역</p>
            <span class="version-badge">NLLB-200</span>
        </header>

        <div class="card">
            <div class="language-selector">
                <div class="lang-box">
                    <label for="sourceLang">원본 언어</label>
                    <select id="sourceLang"></select>
                </div>

                <button type="button" class="swap-btn" id="swapBtn" title="언어 바꾸기">
                    ⇄
                </button>

                <div class="lang-box">
                    <label for="targetLang">번역 언어</label>
                    <select id="targetLang"></select>
                </div>
            </div>

            <div class="text-areas">
                <div class="text-box">
                    <label>원본 텍스트</label>
                    <textarea 
                        id="inputText" 
                        placeholder="번역할 텍스트를 입력하세요..."
                        maxlength="5000"
                    ></textarea>
                    <div class="char-count">
                        <span id="charCount">0</span> / 5000
                    </div>
                </div>

                <div class="text-box">
                    <label>번역 결과</label>
                    <textarea 
                        id="outputText" 
                        placeholder="번역 결과가 여기에 표시됩니다..."
                        readonly
                    ></textarea>
                    <div class="char-count">
                        번역 완료 시 자동 표시
                    </div>
                </div>
            </div>

            <div class="options">
                <div class="option-item">
                    <input type="checkbox" id="useTTS">
                    <label for="useTTS">
                        음성 합성 (TTS) 사용 <span style="font-size: 0.85em; color: #666;">(영어, 스페인어, 프랑스어, 독일어 지원)</span>
                    </label>
                </div>
            </div>

            <div id="message" class="message"></div>

            <div id="audioPlayer" class="audio-player">
                <label>번역 음성</label>
                <audio id="ttsAudio" controls></audio>
            </div>

            <div class="button-area">
                <button type="button" class="btn btn-secondary" id="clearBtn">
                    지우기
                </button>
                <button type="button" class="btn btn-secondary" id="copyBtn">
                    복사
                </button>
                <button type="button" id="translateBtn" class="btn btn-primary">
                    번역하기
                </button>
            </div>

            <div class="shortcuts">
                <kbd>Ctrl</kbd> + <kbd>Enter</kbd> 번역 &nbsp;|&nbsp;
                <kbd>Esc</kbd> 지우기
            </div>
        </div>

        <footer>
            <p>Powered by Meta's NLLB-200</p>
            <p>첫 실행 시 모델 다운로드로 5-10분 소요</p>
        </footer>
    </div>

    <script>
        // 언어 목록
        const languages = [
            {code: 'en', name: 'English (영어)'},
            {code: 'ko', name: '한국어'},
            {code: 'ja', name: '日本語 (일본어)'},
            {code: 'zh', name: '中文 (중국어)'},
            {code: 'es', name: 'Español (스페인어)'},
            {code: 'fr', name: 'Français (프랑스어)'},
            {code: 'de', name: 'Deutsch (독일어)'},
            {code: 'ru', name: 'Русский (러시아어)'},
            {code: 'ar', name: 'العربية (아랍어)'},
            {code: 'hi', name: 'हिन्दी (힌디어)'},
            {code: 'pt', name: 'Português (포르투갈어)'},
            {code: 'it', name: 'Italiano (이탈리아어)'},
            {code: 'nl', name: 'Nederlands (네덜란드어)'},
            {code: 'pl', name: 'Polski (폴란드어)'},
            {code: 'tr', name: 'Türkçe (터키어)'},
            {code: 'vi', name: 'Tiếng Việt (베트남어)'},
            {code: 'th', name: 'ไทย (태국어)'},
            {code: 'id', name: 'Indonesia (인도네시아어)'}
        ];

        let inputText, outputText, sourceLang, targetLang, translateBtn, messageDiv, charCount, useTTS, audioPlayer, ttsAudio;

        // 언어 옵션 초기화
        function initLanguages() {
            languages.forEach(lang => {
                const option1 = document.createElement('option');
                option1.value = lang.code;
                option1.textContent = lang.name;
                if (lang.code === 'ko') option1.selected = true;
                sourceLang.appendChild(option1);

                const option2 = document.createElement('option');
                option2.value = lang.code;
                option2.textContent = lang.name;
                if (lang.code === 'en') option2.selected = true;
                targetLang.appendChild(option2);
            });
        }

        // DOM 로드 후 실행
        document.addEventListener('DOMContentLoaded', function() {
            inputText = document.getElementById('inputText');
            outputText = document.getElementById('outputText');
            sourceLang = document.getElementById('sourceLang');
            targetLang = document.getElementById('targetLang');
            translateBtn = document.getElementById('translateBtn');
            messageDiv = document.getElementById('message');
            charCount = document.getElementById('charCount');
            useTTS = document.getElementById('useTTS');
            audioPlayer = document.getElementById('audioPlayer');
            ttsAudio = document.getElementById('ttsAudio');

            initLanguages();

            async function translate() {
            const text = inputText.value.trim();
            
            if (!text) {
                showMessage('텍스트를 입력해주세요!', 'error');
                inputText.focus();
                return;
            }

            if (sourceLang.value === targetLang.value) {
                showMessage('원본 언어와 번역 언어가 같습니다!', 'error');
                return;
            }

            setLoading(true);
            showMessage('번역 중입니다... 첫 번역은 모델 로딩으로 시간이 걸릴 수 있어요!', 'info');
            outputText.value = '';
            audioPlayer.style.display = 'none';

            try {
                    text: text,
                    source_lang: sourceLang.value,
                    target_lang: targetLang.value
                });

                const response = await fetch('/translate', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        text: text,
                        source_lang: sourceLang.value,
                        target_lang: targetLang.value,
                        use_tts: useTTS.checked
                    })
                });

                const data = await response.json();

                if (response.ok) {
                    outputText.value = data.translated;
                    showMessage('번역 완료!', 'success');
                    
                    // TTS 오디오 처리
                    if (data.audio_url) {
                        ttsAudio.src = data.audio_url;
                        audioPlayer.style.display = 'block';
                    } else {
                        audioPlayer.style.display = 'none';
                    }
                    
                    // TTS 에러가 있으면 표시 (번역은 성공)
                    if (data.tts_error) {
                        console.warn('TTS 경고:', data.tts_error);
                    }
                } else {
                    showMessage(data.error || '번역 중 오류가 발생했습니다.', 'error');
                    audioPlayer.style.display = 'none';
                }

            } catch (error) {
                console.error('에러:', error);
                showMessage('서버와 통신 중 오류가 발생했습니다: ' + error.message, 'error');
            } finally {
                setLoading(false);
            }
        }

        function swapLanguages() {
            const temp = sourceLang.value;
            sourceLang.value = targetLang.value;
            targetLang.value = temp;

            if (outputText.value) {
                const tempText = inputText.value;
                inputText.value = outputText.value;
                outputText.value = tempText;
                updateCharCount();
            }
        }

        function copyResult() {
            const text = outputText.value;
            if (!text) {
                showMessage('복사할 내용이 없습니다.', 'error');
                return;
            }

            navigator.clipboard.writeText(text)
                .then(() => showMessage('클립보드에 복사되었습니다!', 'success'))
                .catch(() => showMessage('복사에 실패했습니다.', 'error'));
        }

        function clearAll() {
            inputText.value = '';
            outputText.value = '';
            messageDiv.style.display = 'none';
            audioPlayer.style.display = 'none';
            updateCharCount();
            inputText.focus();
        }

        function showMessage(text, type) {
            messageDiv.textContent = text;
            messageDiv.className = 'message ' + type;
            messageDiv.style.display = 'block';

            if (type === 'success') {
                setTimeout(() => {
                    messageDiv.style.display = 'none';
                }, 3000);
            }
        }

        function setLoading(isLoading) {
            translateBtn.disabled = isLoading;
            if (isLoading) {
                translateBtn.innerHTML = '<span class="spinner"></span>번역 중...';
            } else {
                translateBtn.innerHTML = '번역하기';
            }
        }

        function updateCharCount() {
            charCount.textContent = inputText.value.length;
        }

            // 이벤트 리스너 등록
            inputText.addEventListener('input', updateCharCount);

            document.addEventListener('keydown', (e) => {
                if (e.ctrlKey && e.key === 'Enter') {
                    e.preventDefault();
                    translate();
                }
                
                if (e.key === 'Escape') {
                    clearAll();
                }
            });

            translateBtn.addEventListener('click', () => {
                translate();
            });
            
            document.getElementById('clearBtn').addEventListener('click', () => {
                clearAll();
            });
            
            document.getElementById('copyBtn').addEventListener('click', () => {
                copyResult();
            });
            
            document.getElementById('swapBtn').addEventListener('click', () => {
                swapLanguages();
            });

            inputText.focus();
        });
    </script>
    <script src="/static/js/chatbot.js"></script>
</body>
</html>
